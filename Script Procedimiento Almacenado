-- Crear un procedimiento almacenado que muestre el nombre, apellido, parentezco y fecha de nacimiento
-- que ha recibido el beneficiario de un cliente que se le ingrese.


-- creamos el procedimiento almacenado
create procedure detalle_benef
--indicamos el par√°metro de entrada (el que ingresaremos para realizar la muestra)
@cli_nombre varchar(30)
as
	select nombre, apellido, parentezco, benef_fecha_nacim
	from BENEFICIARIO where idbeneficiario=( 
		select idcliente from CLIENTE
		where cli_nombre=@cli_nombre)
go

detalle_benef 'Juan'
